<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SerialPortFragment">
   <LinearLayout
       android:layout_margin="10dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="Port Number: "
               android:textSize="30dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Spinner
               android:id="@+id/portSpinner"
               android:layout_alignParentRight="true"
               android:background="@drawable/spinner_background"
               android:layout_width="100dp"
               android:layout_height="40dp">
           </Spinner>
       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="Baud Rate: "
               android:textSize="30dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Spinner
               android:id="@+id/baudSpinner"
               android:layout_alignParentRight="true"
               android:background="@drawable/spinner_background"
               android:layout_width="100dp"
               android:layout_height="40dp">
           </Spinner>
       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="Data Bit: "
               android:textSize="30dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Spinner
               android:id="@+id/dataBitSpinner"
               android:layout_alignParentRight="true"
               android:background="@drawable/spinner_background"
               android:layout_width="100dp"
               android:layout_height="40dp">
           </Spinner>
       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="Stop Bit: "
               android:textSize="30dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Spinner
               android:id="@+id/stopBitSpinner"
               android:layout_width="100dp"
               android:layout_alignParentRight="true"
               android:background="@drawable/spinner_background"
               android:layout_height="40dp">
           </Spinner>
       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="Parity: "
               android:textSize="30dp"
               android:layout_alignParentLeft="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <Spinner
               android:id="@+id/paritySpinner"
               android:layout_alignParentRight="true"
               android:background="@drawable/spinner_background"
               android:layout_width="100dp"
               android:layout_height="40dp">
           </Spinner>
       </RelativeLayout>
   </LinearLayout>

</FrameLayout>